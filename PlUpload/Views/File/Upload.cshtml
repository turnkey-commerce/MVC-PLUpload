@{
    ViewBag.Title = "Upload";
}

    <link type="text/css" rel="stylesheet" href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.10.2/themes/smoothness/jquery-ui.min.css" media="screen" />
    <link type="text/css" rel="stylesheet" href="@Url.Content("~/Scripts/plupload/jquery.ui.plupload/css/jquery.ui.plupload.css")" media="screen" />

<h2>Upload</h2>

<div id="uploader">
    <p>Your browser doesn't have HTML5 or Silverlight support.</p>
</div>

@section Scripts {
   <!--Load plupload and all its runtime scripts-->
<script src="@Url.Content("~/Scripts/plupload/plupload.full.min.js")" type="text/javascript"></script>
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.10.2/jquery-ui.min.js" charset="UTF-8"></script>
<script src="@Url.Content("~/Scripts/plupload/jquery.ui.plupload/jquery.ui.plupload.min.js")" type="text/javascript"></script>
<script type="text/javascript">
   // Initialize the widget when the DOM is ready
$(function() {
    $("#uploader").plupload({
        // General settings
        runtimes : 'html5,silverlight,html4',
        url: '@Url.Action("upload", "file")',
 
        // Maximum file size
        max_file_size : '2048mb',
 
        chunk_size: '1mb',
 
        // Specify what files to browse for
        filters : [
            {title : "Image files", extensions : "jpg,gif,png"},
            {title : "Zip files", extensions : "zip,avi"}
        ],
 
        // Rename files by clicking on their titles
        rename: true,
         
        // Sort files
        sortable: true,
 
        // Enable ability to drag'n'drop files onto the widget (currently only HTML5 supports that)
        dragdrop: true,
 
        // Views to activate
        views: {
            list: true,
            thumbs: true, // Show thumbs
            active: 'list'
        },
 
        // Silverlight settings
        silverlight_xap_url : '@Url.Content("~/Scripts/plupload/js/Moxie.xap")'
    });
});
</script>
}